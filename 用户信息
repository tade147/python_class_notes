class User():
    """创建一个关于使用者的类"""

    def __init__(self, first_name, last_name, location, year):
        """存储用户的一些基本信息"""
        self.first_name = first_name
        self.last_name = last_name
        self.location = location
        self.year = year
        self.login_attempts = 0

    def describe_user(self):
        """打印用户信息摘要"""
        print("这是" + self.first_name + self.last_name + ".他是" + self.location + "人，成为网站用户" + str(self.year) + "年了。")

    def greet_user(self):
        """向用户发出问候"""
        print(self.first_name + self.last_name + "，你好，欢迎使用python。")

    def increment_login_attempts(self):
        """登录次数增量"""
        self.login_attempts += 1
        print("该用户已经登陆" + str(self.login_attempts) + "次了。")

    def reset_login_attempts(self):
        """重置登录次数"""
        self.login_attempts = 0
        print("现在该用户登录次数为" + str(self.login_attempts))

wumin = User('吴', '敏',  '湖南岳阳', 0.5)
wumin.describe_user()
wumin.greet_user()
wumin.increment_login_attempts()
wumin.increment_login_attempts()
wumin.reset_login_attempts()


