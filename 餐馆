class Restaurant():
    """创建一个关于餐馆的类"""
    def __init__(self, name, cuisine_type):
        """创建餐馆属性"""
        self.name = name
        self.cuisine_type = cuisine_type

    def describe_restaurant(self):
        """描述餐馆"""
        print("这个餐馆的名字是" + self.name.title() + "，这是一家" + self.cuisine_type.title() + "的餐馆。")

    def open_restaurant(self):
        """指出该餐馆正在营业"""
        print(self.name + "正在营业。")

    def set_number_served(self, number_served):
        """设置用餐人数"""
        self.number_served = number_served
        print("已经有" + str(self.number_served) + "人在这里吃过饭了")

    def increment_number_served(self, increment):
        """设置用餐人数增量"""
        self.number_served += increment
        print("这家餐馆可能的就餐人数为" + str(self.number_served) + "人。")

the_restaurant = Restaurant("沙县小吃", '卖小吃')

the_restaurant.set_number_served(23)
the_restaurant.increment_number_served(30)





        
